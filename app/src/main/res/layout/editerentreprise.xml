<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        style="@style/Les_editTexts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ed11"
        android:hint="Taper votre Raison Sociale....">

    </EditText>

    <EditText
        style="@style/Les_editTexts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ed22"
        android:layout_below="@id/ed11"
        android:hint="Taper votre Adresse...">

    </EditText>

    <EditText
        style="@style/Les_editTexts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ed33"
        android:layout_below="@id/ed22"
        android:hint="Taper votre Capitale...">



    </EditText>

    <LinearLayout
        android:layout_below="@id/ed33"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            style="@style/Les_deuxieme_boutons"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_margin="15dp"
            android:layout_marginBottom="10dp"
            android:onClick="Modifier"
            android:width="170dp"
            android:layout_gravity="left"
            android:id="@+id/btna1"
            android:text="Modifier"
            android:textAlignment="center"
            />

        <Button
            style="@style/Les_deuxieme_boutons"
            android:onClick="Supprimer"
            android:id="@+id/btnb1"
            android:width="350dp"
            android:layout_gravity="right"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_margin="15dp"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"
            android:text="Supprimer" />

    </LinearLayout>

</RelativeLayout>